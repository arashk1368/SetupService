<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <!--dont mention database name here!-->
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">1234</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <mapping class="cloudservices.brokerage.policy.model.entities.Policy"/>
        <mapping class="cloudservices.brokerage.policy.model.entities.Proposition"/>
        <mapping class="cloudservices.brokerage.policy.model.entities.Service"/>
        <mapping class="cloudservices.brokerage.policy.model.entities.ServiceProposition"/>
        <mapping class="cloudservices.brokerage.policy.model.entities.PolicyProposition"/>
        <mapping class="cloudservices.brokerage.policy.model.entities.PolicyService"/>
    </session-factory>
</hibernate-configuration>
